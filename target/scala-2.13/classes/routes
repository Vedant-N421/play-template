# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# we need to add an app route that references the new controller and method
GET     /api     controllers.ApplicationController.index

POST     /create     controllers.ApplicationController.create(id: String)
GET     /read/:id   controllers.ApplicationController.read(id: String)
PUT     /update   controllers.ApplicationController.update(id: String)
DELETE     /delete    controllers.ApplicationController.delete(id: String)
